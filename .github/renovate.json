{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended",
		":preserveSemverRanges",
		"group:allNonMajor",
		":disableDependencyDashboard"
	],
	"configMigration": true,
	"major": {
		"automerge": false
	},
	"packageRules": [
		{
			"groupName": "GitHub Actions",
			"matchPackageNames": ["/actions/"]
		}
	]
}
